{
  "name": "ai-sop",
  "version": "1.2.2",
  "description": "AI-SOP orchestration framework for knowledge-based and prompt-based Standard Operating Procedures",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-sop": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build && npm test",
    "start": "node dist/cli.js",
    "sop:list": "npm run build && node dist/cli/index.js list",
    "sop:execute": "npm run build && node dist/cli/index.js execute",
    "sop:init": "npm run build && node dist/cli/index.js init-agent",
    "sop:interactive": "npm run build && node dist/cli/index.js interactive",
    "sop:status": "npm run build && node -e \"const {AISop} = require('./dist/index.js'); const aiSop = new AISop(); aiSop.loadSOPs().then(() => console.log(JSON.stringify(aiSop.getStatus(), null, 2)))\"",
    "workflow:development": "npm run build && node scripts/development-workflow.js",
    "workflow:quality": "npm run build && node scripts/quality-workflow.js",
    "workflow:knowledge": "npm run build && node scripts/knowledge-workflow.js",
    "dogfooding:validate": "npm run workflow:development && npm run workflow:quality && npm run workflow:knowledge"
  },
  "keywords": [
    "ai",
    "sop",
    "standard-operating-procedures",
    "automation",
    "workflow",
    "orchestration",
    "knowledge-management",
    "prompt-engineering"
  ],
  "author": "Mark Tiderman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marktiderman/ai-sop.git"
  },
  "bugs": {
    "url": "https://github.com/marktiderman/ai-sop/issues"
  },
  "homepage": "https://github.com/marktiderman/ai-sop#readme",
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "inquirer": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "src/sops/**/*",
    "src/aisop-config.json",
    "src/services/**/*",
    "src/routes/**/*",
    "AGENT_CONSTITUTION.md",
    ".cursor/rules/**/*",
    "agents.md",
    "test-pbj-real-world.cjs",
    "test-override-system.cjs",
    "README.md",
    "LICENSE"
  ]
}
